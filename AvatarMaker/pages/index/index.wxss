page{
  width:100%;
  height:100%;
}
.index-page{
  width:100%;
  height:100%;
  position:relative;
}
.index-page-bg{
  width:100%;
  height:100%;
  overflow:hidden;
  display:flex;
  align-items: center;
  justify-content: center;
}
.page-bg-img{
  width:100%;
}
.index-content{
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  background:rgb(0,0,0,.3);
}

.content-top{
  margin-top:50rpx;
  text-align: center;
}
.user-img-content{
  position:relative;
  width:300rpx;
  height:300rpx;
  margin:auto;
}
.user-img{
  width:300rpx;
  height:300rpx;
  background:rgb(245,245,245);
}
.other-btn-con{
  margin-top:40rpx;
}

.user-elm-img{
  width:300rpx;
  height:300rpx;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}

.user-elm-img-no{
  width:300rpx;
  height:300rpx;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background: white;
}

.user-login{
  margin-top:20rpx;
}
.click-btn{
  opacity: 0.75;
  margin-top:30rpx;
  width:300rpx;
  padding:4rpx 20rpx;
  border-radius:25rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
}
.click-login-btn{
  background:red;
  color:#fff;
}
.click-upload-btn{
  background: #fff;
